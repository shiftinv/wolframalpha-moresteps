{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    "lib": [
      // defaults for target ES6
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      // other additions
      "ES2017"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
