{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}
