{
    "manifest_version": 2,
    "name": "Wolfram|Alpha MoreSteps",
    "description": "Automatically replaces partial step-by-step solutions on Wolfram|Alpha with complete solutions from the API",
    "version": "0.1.1.0",
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "js/lib/webextension-polyfill@0.6.0.js",
            "js/storage.js",
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.wolframalpha.com/*",
                "https://*.wolframalpha.com/*"
            ],
            "js": [
                "js/lib/webextension-polyfill@0.6.0.js",
                "js/storage.js",
                "js/errorhandler.js",
                "js/content.js"
            ],
            "css": ["css/alertmodal.css"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "js/errorhandler.js",
        "js/page.js"
    ],
    "permissions": [
        "storage",
        "*://api.wolframalpha.com/*"
    ],
    "browser_action": {
        "default_title": "Wolfram|Alpha MoreSteps",
        "default_popup": "options.html",
        "default_icon": {
            "48": "icons/icon48.png"
        }
    }
}
